@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<span></span>
@if(SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity"
    asp-page="/Account/Logout"
    asp-route-returnUrl="@Url.Page("/")"
    method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-text">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    Hello @UserManager.GetUserName(User)
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-text float-right">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-text">
        <li class="navbar-item"><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="navbar-item"><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
